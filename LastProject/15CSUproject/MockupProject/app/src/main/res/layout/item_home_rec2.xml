<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_rec2_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="330dp"
        android:backgroundTint="#F1F0F0"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_rec2_img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/mypage"/>
            <TextView
                android:id="@+id/home_rec2_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/ibmplexsanslight"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/home_rec2_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#감성캠핑"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="#6E6E6E"
                    android:fontFamily="@font/ibmplexsanslight"/>
                <TextView
                    android:id="@+id/home_rec2_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#감성캠핑"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="#6E6E6E"
                    android:fontFamily="@font/ibmplexsanslight"/>
                <TextView
                    android:id="@+id/home_rec2_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#감성캠핑"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:layout_marginHorizontal="2dp"
                    android:textColor="#6E6E6E"
                    android:fontFamily="@font/ibmplexsanslight"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/home_rec2_img2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:id="@+id/home_rec2_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="story. 65"
                    android:textSize="10dp"
                    android:layout_gravity="bottom"
                    android:textColor="#000000"
                    android:fontFamily="@font/ibmplexsanslight" />
                <TextView
                    android:id="@+id/home_rec2_tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 4일전"
                    android:textSize="10dp"
                    android:layout_gravity="bottom"
                    android:textColor="#676767"
                    android:fontFamily="@font/ibmplexsanslight" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/eye"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/home_rec2_tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="78"
                        android:textSize="10dp"
                        android:layout_gravity="bottom"
                        android:textColor="#000000"
                        android:fontFamily="@font/ibmplexsanslight" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_rec4_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/home_rec4_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="울산 대왕암 공원"
                    android:textSize="15dp"
                    android:layout_marginRight="245dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/ibmplexsanslight"/>
                <ImageView
                    android:id="@+id/home_rec4_img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:src="@drawable/bookmark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/home_rec4_img2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/spot"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/home_rec4_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="울산 동구 일산동"
                    android:textSize="10dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/home_rec4_img3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fire"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/home_rec4_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="―"
                    android:textSize="10dp"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginVertical="10dp">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp">
                    <ImageView
                        android:id="@+id/home_rec4_img4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spain1"
                        android:scaleType="fitXY" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="4dp">
                        <TextView
                            android:id="@+id/home_rec4_tv4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="여행액티비티"
                            android:textSize="10dp"
                            android:textColor="#ffffff"
                            android:paddingHorizontal="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/text_round2"/>
                        <TextView
                            android:id="@+id/home_rec4_tv5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="백패킹,하이킹"
                            android:textSize="10dp"
                            android:textColor="#ffffff"
                            android:paddingHorizontal="5dp"
                            android:background="@drawable/text_round2"/>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/home_rec4_img5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/spain2"
                        android:scaleType="fitXY"
                        android:layout_marginBottom="2dp"/>
                    <ImageView
                        android:id="@+id/home_rec4_img6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/spain3"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/home_rec4_tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해송과 기암괴석, 울기등대, 출렁다리 등이 있는 울산의 대표적인 공원...."
                android:textSize="10dp"
                android:textColor="#000000" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
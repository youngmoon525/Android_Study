<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tran_back"
    android:orientation="vertical"
    tools:context=".transfer.Trans_frag">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edit_trans"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/edt_border"
                android:drawableEnd="@drawable/check"
                android:hint="　출발지를 입력하세요."
                android:textColorHint="@color/gray"
                android:textColor="#000000"/>
            <EditText
                android:id="@+id/edit_trane"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/edit_trans"
                android:layout_alignBottom="@+id/edit_trans"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="-44dp"
                android:background="@drawable/edt_border"
                android:drawableEnd="@drawable/check"
                android:hint="　도착지를 입력하세요"
                android:textColorHint="@color/gray"
                android:textColor="#000000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="130dp"
                    android:backgroundTint="@color/sky"
                    android:text="검색" />

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="130dp"
                    android:backgroundTint="@color/sky"
                    android:text="다시입력" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="　검색결과"
        android:gravity="center_vertical"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:background="@drawable/textview_border"/>
    <FrameLayout
        android:id="@+id/container"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/pager2"
            android:orientation="vertical"/>-->
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec_bus"/>
    </FrameLayout>
</LinearLayout>